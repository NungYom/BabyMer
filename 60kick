-- รอให้เกมโหลดจริง
repeat task.wait() until game:IsLoaded()
-- Services
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Config
local CHECK_DELAY_START = 30      -- วินาทีก่อนเริ่มตรวจ
local CHECK_INTERVAL = 1          -- ตรวจทุกกี่วินาที
local POINT_FOLDER = workspace:WaitForChild("Point1")
local BOSS_NAME = "Boss01"

-- รอ 30 วินาที
task.wait(CHECK_DELAY_START)

-- Loop ตรวจสอบ
while true do
    local boss = POINT_FOLDER:FindFirstChild(BOSS_NAME)

    if not boss then
        -- บอสหาย = เตะออก
        player:Kick("Boss01 defeated. Leaving server.")
        break
    end

    task.wait(CHECK_INTERVAL)
end
