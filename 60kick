-- Services
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Config
local START_DELAY = 30      -- รอ 30 วินาทีก่อนเริ่ม
local CHECK_INTERVAL = 1    -- ตรวจทุก 1 วิ

-- Path ที่ถูกต้อง
local worldBoss = workspace:WaitForChild("WorldBoss")
local point1 = worldBoss:WaitForChild("Point1")

task.wait(START_DELAY)

while true do
    -- ถ้า Point1 ว่าง = บอสตาย
    if #point1:GetChildren() == 0 then
        player:Kick("Boss defeated. Leaving server.")
        break
    end

    task.wait(CHECK_INTERVAL)
end
